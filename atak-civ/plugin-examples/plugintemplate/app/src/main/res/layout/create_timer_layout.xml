<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:fadeScrollbars="false">

    <TextView
        android:id="@+id/title"
        android:text="Create a New Timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="24sp"
        />
    <LinearLayout
        android:id="@+id/nameZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/title">
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Name: " />
        <EditText
            android:id="@+id/timerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp"
            android:background="@drawable/edit_text_border"/>
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/durationZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/nameZone">
        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:text="Duration: " />
        <EditText
            android:id="@+id/durationHours"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ems="10"
            android:inputType="time"
            android:singleLine="true"
            android:alpha="1"
            android:hint="hh"
            android:maxLength="2"
            android:background="@drawable/edit_text_border"/>
        />
        <TextView
            android:id="@+id/hrtomn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="2.5dp"
            android:text=":"/>
        <EditText
            android:id="@+id/durationMinutes"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ems="10"
            android:inputType="time"
            android:singleLine="true"
            android:alpha="1"
            android:hint="mm"
            android:maxLength="2"
            android:background="@drawable/edit_text_border"/>
        <TextView
            android:id="@+id/mntosec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2.5dp"
            android:layout_marginEnd="2.5dp"
            android:text=":"/>
        <EditText
            android:id="@+id/durationSeconds"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ems="10"
            android:inputType="time"
            android:singleLine="true"
            android:alpha="1"
            android:hint="ss"
            android:maxLength="2"
            android:background="@drawable/edit_text_border"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/soundZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationZone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/soundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="Sound: " />

        <TextView
            android:id="@+id/changeSoundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/changeSoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sound_icon"
            android:backgroundTint="@color/white"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/presetZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/soundZone">
        <TextView
            android:id="@+id/presetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preset: "
            android:layout_marginLeft="15dp"/>
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="15dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/notificationZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/presetZone">
        <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification: "
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp" />
            <Button
                android:id="@+id/addNotificationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_alert_icon"
                android:backgroundTint="@color/white"/>
    </LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="32dp"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    />

    <Button
        android:id="@+id/back"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="10dp"
        android:text="Back"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
